<h1>Edit your tag</h1>

<%= form_for @tag do |f| %>
    <ul>
      <% @tag.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
    <p>
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </p>
    <%= f.submit %>
<% end %>
<%= link_to 'back' , tag_path %>