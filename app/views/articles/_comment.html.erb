<div>
  <h4>Comment by <%= comment.author_name %></h4>
  <p class="comment"><%= comment.body %></p>
  <p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
  <% if logged_in? %>
      <% if comment.author_name == current_user.username %>
          <%= link_to 'Destroy', article_comment_path(article_id: comment.article_id, id: comment.id), method: :delete, data: {confirm: 'Really delete the comment?'} %>
          <br>
      <% end %>
  <% end %>
</div>