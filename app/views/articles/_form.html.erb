<%= form_for @article do |f| %>
    <ul>
      <% @article.errors.full_messages.each do |error| %>
          <li><%= error %></li>
      <% end %>
    </ul>
    <b> <%= f.label :title, 'Name your article' %></b> <br>
    <%= f.text_field :title %> <br> <br>
    <b><%= f.label :body, 'Describe your article' %></b> <br>
    <%= f.text_area :body %> <br> <br>
    <%= f.submit %>
<% end %>