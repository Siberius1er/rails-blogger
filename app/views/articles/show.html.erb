<h1>Article</h1>

<%= @article.title %> <br>
<%= @article.body %> <br> <br>
<%= link_to 'Update', edit_article_path(@article) %><br>
<%= link_to 'Destroy', article_path(@article), method: :delete, data: {confirm: 'Really delete the article?'} %> <br>
