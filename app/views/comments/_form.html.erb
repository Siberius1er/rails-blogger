<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
    <p>
      <%= @comment.author_name = current_user.username %>
    </p>
    <p>
      <%= f.label :body, 'your Comment' %><br/>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Submit' %>
    </p>
<% end %>
